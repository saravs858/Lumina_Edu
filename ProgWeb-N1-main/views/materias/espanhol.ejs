<%- include('../partials/header_main', { title: `${materia.nome} - ENEM` }) %>

<div class="materia-container">
  <h1><%= materia.nome %></h1>
  <p><%= materia.descricao %></p>

  <% materia.conteudos.forEach(conteudo => { %>
    <div class="topico">
      <h4><%= conteudo.titulo %></h4>
      <p><%= conteudo.descricao %></p>
      <ul>
        <% conteudo.materiais.forEach(material => { %>
          <li>
            <a href="<%= material.link %>" target="_blank">
              <%= material.tipo %> - <%= material.link.includes('youtube') ? 'Vídeo' : 'PDF' %>
            </a>
          </li>
        <% }) %>
      </ul>
    </div>
  <% }) %>

  <a href="/disciplinas" class="btn-voltar">← Voltar para disciplinas</a>
</div>

<%- include('../partials/footer') %>
